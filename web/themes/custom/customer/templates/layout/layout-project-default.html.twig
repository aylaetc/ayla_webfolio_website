{% if content %}

    <article class="project default">

        <div class="layout">

            {% if content.content %}
            <div class="layout-content header">
                {{ content.content }}
            </div>
            {% endif %}

            {% if content.pictureheader %}
            <div class="layout-picture-header">
                {{ content.pictureheader }}
            </div>
            {% endif %}

            {% if content.contentsecond %}
            <div id="scroll-transform" class="layout-content content">
                {{ content.contentsecond }}
            </div>
            {% endif %}

            {% if content.picturecontent %}
            <div class="layout-picture-content">
                {{ content.picturecontent }}
            </div>
            {% endif %}

            {% if content.contentthird %}
            <div id="scroll-transform-2" class="layout-content footer">
                {% if content.link %}
                    {{ content.link }}
                {% endif %}
                {{ content.contentthird }}
            </div>
            {% endif %}

            {% if content.picturefooter %}
            <div id="scroll-transform-3" class="layout-picture-footer">
                {{ content.picturefooter }}
            </div>
            {% endif %}
        </div>
        <svg id="wave" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
            viewBox="0 0 66 9" style="enable-background:new 0 0 66 9;" xml:space="preserve">
            <path d="M66.1,1.7c-3.1-0.3-4.5-0.7-5.8-0.5C48,3.2,35.8,1.9,23.6,0.3C15.2-0.7,8,2.3,0.1,5.1C11.8,11.5,51.9,9.7,66.1,1.7z"/>
        </svg>
    </article>


{% endif %}
